<div class='container px-5 px-sm-0'>
  <%= render 'layouts/errors', obj: @book %>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newBook %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorite_path(@book), method: :delete do %>
                <i class="fa-solid fa-heart" style="color:red;"></i><%= @book.favorites.count %>
              <% end %>
            </td>
          <% else %>
            <td>
              <%= link_to book_favorite_path(@book), method: :post do %>
                <i class="fa-solid fa-heart" style="color:blue;"></i><%= @book.favorites.count %>
              <% end %>
            </td>
          <% end %>
          <td>コメント数: <%= @book.book_comments.count %></td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <h4>comment</h4>
      <table class="table mb-4">
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td><%= link_to(book_comment.user) do %>
              <%= image_tag book_comment.user.get_profile_image, size:"50x50" %><br>
              <%= book_comment.user.name %>
              <% end %>
            </td>
            <td><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
              <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, date: { confirm: 'コメントを削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
      <%= form_with model: [@book, @book_comment] do |f| %>
        <p><%= f.text_field :comment, class: 'form-control' %></p>
        <p><%= f.submit '送信' %></p>
      <% end %>
    </div>
  </div>
</div>