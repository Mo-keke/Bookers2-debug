<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <% if user_signed_in? %>
        <%= form_with url: search_path, local: true, method: :get do |f| %>
          <%= f.text_field :word %>
          <%= f.select :range, options_for_select([["User"], ["Book"]]) %>
          <%= f.select :search, options_for_select([["perfect_match"], ["forward_match"], ["backward_match"], ["partical_match"]]) %>
          <%= f.submit "search" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>